bool isPrime(int);		//funtion prototype

int main()
{
	int value;
	cin >> value;

	isPrime(value);


	if (isPrime == 0)
	{
		cout << "The number is not prime.\n";
	}
	else
		cout << "The number is prime.\n";
	system("pause");
	return 0;
}

bool isPrime(int value)
{
	int number;

	for (int i = 3; i < sqrt(value); i += 2)
	{
		number = value % i;
		if (number != 0)
		{
			return true;
		}
		else
			return false;
	}
}
